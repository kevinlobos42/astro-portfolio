---
import { aboutData } from "../data"
import SkillsImg  from '../components/SkillsImg.astro'


const {skills, resume} = aboutData;
---

<section id="skills">
    <div class="min-w-[390px] sm:min-w-[540px] md:min-w-[720px] lg:min-w-[960px] xl:min-w-[1140px] mx-auto py-3 px-3 w-auto flex flex-col items-center justify-center pb-64 xl:pb-3">
        <p class="font-[700] uppercase text-4xl mb-12 title" >Skills</p>
        <div class="flex flex-col xl:flex-row w-full justify-between px-20">
            {skills.map(skill =>{
                let newWord = skill.replace('.png','');
                return (
                    <div class="flex items-center justify-center flex-col gap-2">
                        <div class="h-36 flex items-center justify-center">
                            <SkillsImg skill={skill} size={100}/>
                        </div>
                        <p class="text-lg font-[600]">{newWord}</p>
                    </div>
                )
            })}
        </div>
    </div>
</section>

<style>
  #skills {
    background-color: #02aab0;
    background-image: linear-gradient(135deg, #02aab0 0%, #00cdac 100%);
    color: #fff;
    height: 100%;
    border-top: 0px;
    -webkit-clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%);
    clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%);
    padding-bottom: 10%;
    padding-top:2%;
  }
  .title{
    animation-name: fade;
    animation-delay: .5s;
    animation-duration: 1s;
    animation-fill-mode: forwards;
    visibility: hidden;
  }

  @keyframes fade {
    0% {
      opacity: 0;
    }
    1% {
      visibility: visible;
    }
    100% {
      visibility: visible;
      opacity: 1;
    }
  }
  @keyframes fadeFromLeft {
    0% {
      opacity: 0;
      transform: translateX(-20px);
    }
    1% {
      visibility: visible;
    }
    100% {
      visibility: visible;
      opacity: 1;
      transform: translateX(0px);
    }
  }
</style>
