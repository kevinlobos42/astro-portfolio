---
import ProjectThumbnails from "../components/ProjectThumbnails.astro";
import SkillsImg from "../components/SkillsImg.astro";
import { projectsData } from "../data";

const data = projectsData;
---

<section id="skills">
  <div
    class="text-[#272341] max-w-[390px] sm:max-w-[540px] md:max-w-[720px] lg:max-w-[960px] xl:max-w-[1140px] 2xl:max-w-[1260px] mx-auto py-3 px-3 w-auto flex flex-col items-center justify-center xl:pb-3"
  >
    <p class="font-[700] uppercase text-4xl mb-12 title">Projects</p>
    <div class="flex gap-20 items-center justify-center flex-col">
      {
        data.map((project) => {
          return (
            <div class="flex gap-3 items-start justify-center xl:flex-row flex-col">
              <div class="px-2 w-full xl:w-1/3 xl:px-6 text-sm">
                <p class="font-bold text-2xl mb-5">{project.title}</p>
                <p>{project.info}</p>
                <p class="font-bold">Technologies Used:</p>
                <div class="flex gap-6 my-3">
                  {project.techUsed.map((tech) => (
                    <SkillsImg skill={tech} size={35} />
                  ))}
                </div>
                <div class="flex gap-4 items-center justify-start">
                  <a
                    class="btn-text cta-btn inline-block font-[700] leading-3 py-3 px-6 relative transition-all ease-in-out bg-transparent"
                    href={project.url}
                    target="_blank"
                  >
                    See Live
                  </a>
                  <a
                    class="btn-text btn-secondary inline-block font-[700] leading-3 py-3 px-6 relative transition-all ease-in-out bg-transparent"
                    href={project.repo}
                    target="_blank"
                  >
                    Source Code
                  </a>
                </div>
              </div>
              <a
                target="_blank"
                href={project.url}
                class="w-full mx-1 xl:w-2/3 img-shadow"
              >
                <ProjectThumbnails title={project.img} />
              </a>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .cta-btn {
    border-image: linear-gradient(135deg, #02aab0, #00cdac);
    border-image-slice: 1;
    border-style: solid;
    border-width: 2px;
    cursor: pointer;
  }
  .btn-text {
    transition: all 0.3s ease;
    background: -webkit-linear-gradient(135deg, #02aab0, #00cdac);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    z-index: 40;
  }
  .btn-secondary:hover {
    transform: translateX(2px);
  }
  .cta-btn:after {
    bottom: 0;
    content: "";
    display: block;
    height: 100%;
    left: 0;
    position: absolute;
    transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
    width: 0;
    background-image: linear-gradient(135deg, #02aab0, #00cdac);
    z-index: -1;
  }
  .cta-btn:hover:after {
    width: 100%;
  }
  .cta-btn:hover {
    color: white;
    -webkit-background-clip: border-box;
    -webkit-text-fill-color: white;
    background: transparent;
  }
  .img-shadow {
    box-shadow: rgba(0, 0, 0, 0.3) 0px 0px 12px;
  }
</style>
